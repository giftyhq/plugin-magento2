<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="checkout.cart.totals">
            <arguments>
                <argument name="jsLayout" xsi:type="array">
                    <item name="components" xsi:type="array">
                        <item name="block-totals" xsi:type="array">
                            <item name="children" xsi:type="array">
                                <item name="gifty_gift_card_discount" xsi:type="array">
                                    <item name="component" xsi:type="string">
                                        Gifty_GiftCard/js/view/checkout/summary/gift_card_discount
                                    </item>
                                    <item name="sortOrder" xsi:type="string">40</item>
                                    <item name="config" xsi:type="array">
                                        <item name="title" xsi:type="string" translate="true">Gift Card</item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
        <referenceContainer name="checkout.cart.container">
            <block
                    cacheable="false"
                    class="Gifty\Magento\Block\Cart\GiftCard"
                    name="checkout.cart.gifty_gift_card"
                    template="Gifty_GiftCard::cart/gift_card.phtml"
                    after="-"
            />
        </referenceContainer>
    </body>
</page>